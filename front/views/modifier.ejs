<%- include('partials/head') %>

<%- include('header') %>

<h1>Modifier une Annonce</h1>

<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="titre">Titre</label>
      <input type="text" class="form-control" id="titre" value="<%= annonce.titre %>">
    </div>
    <div class="form-group col-md-6">
      <label for="description">Descrition</label>
      <input type="text" class="form-control" id="description" value="<%= annonce.description %>">
    </div>
  </div>
  <div class="form-group">
    <label for="adresse">Address</label>
    <input type="text" class="form-control" id="adresse" placeholder="1234 Main St" value="<%= annonce.adresse %>">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="ville">Ville</label>
      <input type="text" class="form-control" id="ville" value="<%= annonce.ville %>">
    </div>
    <div class="form-group col-md-2">
      <label for="code_postal">Code postal</label>
      <input type="text" class="form-control" id="code_postal" value="<%= annonce.code_postal %>">
    </div>
  </div>
  <div class="form-group col-md-2">
      <label for="prix">Prix</label>
      <input type="text" class="form-control" id="prix" value="<%= annonce.prix %>">
    </div>
  </div>
  <button type="submit" class="btn btn-primary" onclick="changeAnnonce('<%= annonce._id %>')">Confirmer</button>
</form>

<%- include('footer') %>
